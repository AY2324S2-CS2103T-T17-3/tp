<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="detailsScrollPane" fitToWidth="true" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" style="-fx-background:transparent; -fx-background-color: transparent;">
    <VBox fx:id="detailsPane" visible="false">
        <GridPane alignment="TOP_CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
                <ColumnConstraints hgrow="NEVER"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <VBox minHeight="105" GridPane.columnIndex="0">
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
                <ScrollPane prefHeight="120" VBox.vgrow="ALWAYS"
                            style="-fx-background:transparent; -fx-background-color: transparent;">
                    <VBox>
                        <Label fx:id="name" styleClass="cell_big_label" text="name" wrapText="true"/>
                        <FlowPane fx:id="tags"/>
                        <Label fx:id="phone" styleClass="cell_small_label" text="phone"/>
                        <Label fx:id="address" styleClass="cell_small_label" text="address"/>
                        <Label fx:id="email" styleClass="cell_small_label" text="email"/>
                        <Label fx:id="note" styleClass="cell_small_label" text="note"/>
                        <Label fx:id="weightValue" styleClass="cell_small_label" text="weightValue"/>
                        <Label fx:id="weightDate" styleClass="cell_small_label" text="weightDate"/>
                        <Label fx:id="height" styleClass="cell_small_label" text="height"/>
                    </VBox>
                </ScrollPane>
            </VBox>
            <ImageView fx:id="qrcode" fitHeight="150" fitWidth="150" pickOnBounds="true" preserveRatio="true"
                       GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="TOP"/>
        </GridPane>

        <TabPane fx:id="trackableFieldsTabPane" tabClosingPolicy="UNAVAILABLE" prefHeight="250" side="BOTTOM"
                 VBox.vgrow="ALWAYS">
            <Tab text="Weight (kg)">
            </Tab>
            <Tab text="Exercises">
            </Tab>
        </TabPane>
    </VBox>
</ScrollPane>
